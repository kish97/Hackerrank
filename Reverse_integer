/*
Algorithm:
1. n%10 will give remainder (units place)
2. to reverse a number, we should add this at highest place
    how to add this at highest place?...multiply by its no. of digits
    i should hold no of digits in an integer.
    How to do that?
    while(n!=0){
        i++;
        n=n/10;
    }
    while(n!=0){
        rem = n %10;
        reverse += rem*pow(10,i);
        n = n/10;
        i--;
    }
*/

#include <iostream>
#include <math.h>
using namespace std;

int main()
{
    int n;
    cin>>n;
    int temp = n;
    int i=0;
    int rem,reverse;
    rem=reverse = 0;
    temp=temp/10;
    while(temp!=0){
        temp=temp/10;
        i++;
    }
    cout<<"i value :"<<i<<endl;
    while(n!=0){
        rem = n %10;
        reverse += rem*pow(10,i);
        cout<<"reverse value at each iteration :"<<reverse<<endl;
        n = n/10;
        i--;
    }
    cout<<reverse;
    return 0;
}
